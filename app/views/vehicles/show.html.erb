<%- model_class = Vehicle -%>
<div class="page-header">
  <h1><%=t '.title', :default => Vehicle %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @vehicle.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @vehicle.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:teaser) %></dt>
      <dd><pre class="prettyprint"><%= @vehicle.teaser %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sold) %></dt>
      <dd><pre class="prettyprint"><%= @vehicle.sold %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vehicles_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vehicle_path(@vehicle), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vehicle_path(@vehicle),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

